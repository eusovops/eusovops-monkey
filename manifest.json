{
  "manifest_version": 3,
  "name": "EuSovOps-Monkey",
  "version": "1.3.1",
  "description": "EuSovOps internal userscript manager for Oracle infrastructure",
  "author": "Marius Bugaciu @ EUSOVOPS",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "EuSovOps-Monkey"
  },

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "permissions": [
    "storage",
    "scripting",
    "webNavigation",
    "notifications",
    "contextMenus",
    "alarms"
  ],

  "host_permissions": [
    "https://*.oracleiaas.com/*",
    "https://*.eu-dcc-rome-1/*",
    "https://*.eu-milan-2/*",
    "https://*.eu-madrid-2/*",
    "https://*.eu-frankfurt-2/*",
    "https://devops.oci.oraclecorp.com/*",
    "https://devops.eu-madrid-2.oci.oraclerealm.eu/*",
    "https://*.oraclerealm.eu/*",
    "*://*/*.user.js",
    "*://*/*.user.js?*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://*.oracleiaas.com/*",
        "https://*.eu-dcc-rome-1/*",
        "https://*.eu-milan-2/*",
        "https://*.eu-madrid-2/*",
        "https://*.eu-frankfurt-2/*",
        "https://devops.oci.oraclecorp.com/*",
        "https://devops.eu-madrid-2.oci.oraclerealm.eu/*",
        "https://*.oraclerealm.eu/*"
      ],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*/*.user.js", "*://*/*.user.js?*"],
      "js": ["content/install-detector.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],



  "minimum_chrome_version": "88"
}
