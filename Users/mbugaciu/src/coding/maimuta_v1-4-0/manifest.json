{
  "manifest_version": 3,
  "name": "Maimuta",
  "version": "1.4.0",
  "description": "Load your personal scripts using Manifest V3",
  "author": "Marius Bugaciu",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Maimuta"
  },

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "permissions": [
    "storage",
    "scripting",
    "webNavigation",
    "notifications",
    "contextMenus"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*/*.user.js", "*://*/*.user.js?*"],
      "js": ["content/install-detector.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],



  "minimum_chrome_version": "88"
}
